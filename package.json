{
  "name": "smodale",
  "description": "A simple, light and highly customizable modal for Svelte",
  "svelte": "src/index.js",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "author": {
    "name": "Skender Moglica",
    "email": "moglica.s@gmail.com",
    "url": "https://skendermoglica.it/"
  },
  "scripts": {
    "build": "rollup -c",
    "build:demo": "npm run build -- --environment BUILD:demo",
    "dev": "npm run build -- -w",
    "prepublishOnly": "npm run build",
    "lint": "eslint --fix --ext .svelte,.js src",
    "lint:prettier": "prettier --write src/**/{*.svelte,*.js}"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-svelte3": "^3.1.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.9",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.44.0",
    "rollup-plugin-browsersync": "^1.3.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-license": "^2.3.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte-preprocess": "^4.7.0"
  },
  "keywords": [
    "svelte",
    "modal",
    "dialog",
    "popup"
  ],
  "files": [
    "src",
    "dist"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,svelte}": "prettier --write",
    "*.{svelte,js}": "eslint --fix --ext .js,.svelte"
  },
  "dependencies": {
    "svelte": "^3.37.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/smoglica/smodale.git"
  },
  "bugs": {
    "url": "https://github.com/smoglica/smodale/issues"
  }
}
